{
	"extends": "eslint:recommended",
	
    "parserOptions": {
        "ecmaVersion": 2017
    },

    "env": {
		"browser": false,
        "node": true,
		"es6": true
    },
	
	"rules": {
		"indent": ["error", 2],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"],
		"no-undef": 1
	}
}
